<html lang="en">

<head>
    <!-- Mengatur karakter set dan viewport untuk responsif -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Menetapkan judul halaman berdasarkan variabel {{title}} -->
    <title>{{title}}</title>
    <!-- Menghubungkan file stylesheet external -->
    <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
    <!-- Konten pusat dengan penyesuaian margin dan penempatan -->
    <div style="text-align: center; margin-top: 50px;">
        <!-- Judul halaman dinamis berdasarkan variabel {{title}} -->
        <h1>{{title}}</h1>
        <!-- Pesan untuk halaman tidak ditemukan -->
        <p>Halaman yang Anda cari tidak ditemukan.</p>
    </div>
</body>

</html>
